<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RussianKaruta"
             x:Class="RussianKaruta.App">
    <Application.Resources>
        <ResourceDictionary>

            <Color x:Key="PageBackgroundColor">#0c6339</Color>
            <Color x:Key="PrimaryTextColor">White</Color>
            <Color x:Key="PrimaryDarkColor">#292929</Color>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
                <Setter Property="FontFamily" Value="RobotoBold" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="TextColor" Value="{DynamicResource PrimaryDarkColor}" />
                <Setter Property="FontFamily" Value="RobotoRegular" />
                <Setter Property="BackgroundColor" Value="#ffffff" />
                <Setter Property="Padding" Value="14,10" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>